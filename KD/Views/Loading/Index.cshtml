
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .main-container-view-card {
        margin: 18px;
    }

    .nav-card {
        display: grid;
        grid-template-columns: repeat(auto-fill,minmax(150px,1fr));
        grid-gap: 16px;
        user-select: none;
    }

    .box-card {
        background: #fff;
        border-radius: 10px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 25px 6px;
        grid-gap: 6px;
        cursor: pointer;
    }

    .box-profile {
        width: 65px;
        height: 65px;
        border-radius: 50%;
        border: 1px solid rgb(128 128 128 / 0.24);
    }

        .box-profile img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            border-radius: 50%;
            padding: 2px;
        }

    .main-loading {
        position: relative;
        background: #f6f6f6 !important;
        overflow: hidden;
    }

        .main-loading:before {
            content: "";
            position: absolute;
            width: 100%;
            height: 100%;
            background: linear-gradient(95deg, transparent,#ffffffa3,transparent);
            transform: translateX(-100%);
            animation: animation_loading 1.5s infinite;
        }

    @@keyframes animation_loading {
        100% {
            transform: translateX(100%);
        }
    }
    .nav-name-loading {
        width: 35%;
        height: 12px;
        border-radius: 10px;
    }
</style>

<div class="main-container">

    <div class="main-head-title">
        <div class="main-left">
            <div class="main-icon-head main-add-size-3px"><i class="ri-speaker-line"></i></div><div class="main-text-function">Loading</div>
        </div>
        <div class="main-middle"></div>
        <div class="ocs-right">
        </div>
    </div>

    <section class="main-container-view-card">
        <div class="nav-card">
            <div class="box-card">
                <div class="box-profile">
                    <img src="~/Content/Assets/logo/JBL.jpg" />
                </div>
                <div class="nav-name">JBL</div>
            </div>
            <div class="box-card">
                <div class="box-profile main-loading">

                </div>
                <div class="nav-name nav-name-loading main-loading"></div>
            </div>
        </div>
    </section>
</div>

