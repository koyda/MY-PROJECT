<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title | KD</title>
    <link rel="icon" href="~/Content/Assets/logo/logo.png" />
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/themeStyle")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/Main/main.css" rel="stylesheet" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="main-container-loading"><div class="loader"><nav><box></box><box></box></nav><nav><box></box><box></box></nav></div></div>

    <div class="main-wrapper" style="display:none;">
        @Html.Partial("_leftMenu")
        <div class="main-nav-right main_scroll_container_view">
            @Html.Partial("_Header")
            @RenderBody()
            @*<div class="main-space-footer"></div>*@
        </div>
        @RenderSection("modals", false)
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/themeScript")

    <script src="~/Content/Plugins/JqueryConfirm/jquery-confirm.js"></script>
    <script src="~/Content/Plugins/SnackBar/SnackBar.js"></script>
    <script src="~/Content/Main/js/actionRipple.js"></script>
    <script src="~/Content/Main/js/_contentRightDialog.js"></script>
    <script src="~/Content/Main/js/tab.js"></script>
    <script src="~/Content/Main/js/activeMenu.js"></script>
    <script src="~/Content/Main/js/_filterChip.js"></script>
    <script src="~/Content/Main/js/_pageTransition.js" type="module"></script>
    <script src="~/Content/Main/menu.js" type="module"></script>
    <script src="~/Content/Main/Header.js" type="module"></script>
    <script src="~/Content/Main/Button.js" type="module"></script>
    <script src="~/Scripts/Function/UI.js"></script>
    <script src="~/Scripts/Function/Module.js"></script>
    @*<script src="~/Scripts/Function/ModalDialog.js"></script>*@
    <script src="~/Scripts/Function/filter.js"></script>
    @*<script src="~/Scripts/Function/translate.js"></script>
      <script src="~/Scripts/Function/pagination.js"></script>*@

    <script>
        $(document).ready(function () {
            loadTraslate();
            setTimeout(function () {
                $(".main-wrapper").fadeIn(1000);
            },100);
            setTimeout(function () {
                $(".main-container-loading").fadeOut(1000);
            }, 150);
        });
    </script>
    @RenderSection("scripts", required: false)

</body>
</html>
