
@{
    Layout = null;
    ViewBag.Title = "Login";
}

<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link rel="stylesheet" href="~/Content/Plugins/remixicon/remixicon.css" />
    <link rel="stylesheet" href="~/Content/Main/Login/Login.css" />
    <link rel="icon" href="~/Content/Assets/Login/logo.png" />
</head>

<body>
    <div class="main-login-wrapper">

        <div class="main-login-content">
            <div class="main-login-left">
                <div class="image-login">
                    <img src="~/Content/Assets/Login/login.png" />
                </div>
            </div>

            <div class="main-login-right">

                <div class="header">
                    <div class="logo">
                        <img src="~/Content/Assets/Login/logo.png" />
                    </div>
                    <div class="title" ocs-data-tag="welcome">សូមស្វាគមន៍</div>
                </div>

                <div class="body">
                    <div class="main-login-form-group">
                        <label class="label-required" for="Username">ឈ្មោះអ្នកប្រើប្រាស់</label>
                        <input type="text" class="form-control-auth" placeholder="ឈ្មោះអ្នកប្រើប្រាស់" />
                    </div>
                    <div class="main-login-form-group">
                        <label class="label-required" for="Password">ពាក្យសម្ងាត់</label>
                        <div class="input-with-icon">
                            <input type="password" class="form-control-auth new-password" placeholder="ពាក្យសម្ងាត់"/>
                            <div class="icon-show-password"><span class="ocs-btn-show-password" id="btn_show_password"><i class="ri-eye-off-line"></i></span></div>
                        </div>
                    </div>
                    <button class="auth-btn auth-btn-login"> <span id="main_login">ចូលប្រើប្រាស់</span></button>
                    <button id="btn_forgot_password" class="auth-forgot-pasword ocs-forgot-password"> ភ្លេចពាក្យសម្ងាត់ ?</button>
                </div>

            </div>
        </div>
    </div>
</body>
</html>
